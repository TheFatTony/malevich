<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="thefattony" id="counterparty_type-name-uc">
        <addUniqueConstraint columnNames="name" constraintName="counterparty_type_name_uc" tableName="counterparty_type"/>
    </changeSet>

    <changeSet author="thefattony" id="category-category_name-uc">
        <addUniqueConstraint columnNames="category_name" constraintName="category_category_name_uc" tableName="category"/>
    </changeSet>

    <changeSet author="thefattony" id="counterparty-type_id-fk">
        <addForeignKeyConstraint baseColumnNames="type_id" baseTableName="counterparty"
                                 constraintName="counterparty_type_fk"
                                 referencedColumnNames="id" referencedTableName="counterparty_type"/>
    </changeSet>

    <changeSet author="thefattony" id="counterparty-trader_id-fk">
        <addForeignKeyConstraint baseColumnNames="trader_id" baseTableName="counterparty"
                                 constraintName="counterparty_trader_fk"
                                 referencedColumnNames="id" referencedTableName="trader"/>
    </changeSet>

    <changeSet author="thefattony" id="counterparty-gallery_id-fk">
        <addForeignKeyConstraint baseColumnNames="gallery_id" baseTableName="counterparty"
                                 constraintName="counterparty_gallery_fk"
                                 referencedColumnNames="id" referencedTableName="gallery"/>
    </changeSet>

</databaseChangeLog>