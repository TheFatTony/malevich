<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="thefattony" id="artwork-table">
		<createTable tableName="artwork">
			<column name="id" type="bigint" />
			<column name="language" type="char(2)"/>
			<column name="title" type="varchar(4000)" />
			<column name="description" type="clob" />
			<column name="price" type="double" />
		</createTable>
		<modifySql dbms="mysql">
			<replace replace="clob" with="longtext"/>
		</modifySql>
	</changeSet>

	<changeSet author="thefattony" id="artwork-pk">
		<addPrimaryKey columnNames="id, language" constraintName="artwork_pk" tableName="artwork" />
	</changeSet>

</databaseChangeLog>

