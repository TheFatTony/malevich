<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="thefattony" id="artwork-stock-table">
        <createTable tableName="artwork_stock">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="artwork_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="gallery_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <replace replace="clob" with="longtext"/>
        </modifySql>
    </changeSet>

    <changeSet author="thefattony" id="artwork-stock-pk">
        <addPrimaryKey columnNames="id" constraintName="artwork-stock_pk" tableName="artwork_stock"/>
    </changeSet>

    <changeSet author="thefattony" id="artwork-stock-id-aa" dbms="mysql">
        <addAutoIncrement columnDataType="bigint" columnName="id" tableName="artwork_stock"/>
    </changeSet>

</databaseChangeLog>