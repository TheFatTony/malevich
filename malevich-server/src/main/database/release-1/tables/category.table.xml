<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="thefattony" id="category-table">
        <createTable tableName="category">
            <column name="id" type="bigint"/>
            <column name="language" type="char(2)"/>
            <column name="category_name" type="varchar(400)"/>
            <column name="description" type="clob"/>
        </createTable>
        <modifySql dbms="mysql">
            <replace replace="clob" with="longtext"/>
        </modifySql>
    </changeSet>

    <changeSet author="thefattony" id="category-pk">
        <addPrimaryKey columnNames="id, language" constraintName="category_pk" tableName="category"/>
    </changeSet>

</databaseChangeLog>

