<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

	<changeSet author="thefattony" id="gallery_user-table">
		<createTable tableName="gallery_user">
			<column name="gallery_id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="user_id" type="bigint">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet author="thefattony" id="gallery_user-pk">
		<addPrimaryKey columnNames="gallery_id, user_id" constraintName="gallery_user_pk" tableName="gallery_user"/>
	</changeSet>

</databaseChangeLog>