<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

	<changeSet author="thefattony" id="organization-table">
		<createTable tableName="organization">
			<column name="id" type="bigint"/>
			<column name="legal_name" type="varchar(100)"/>
		</createTable>
	</changeSet>

	<changeSet author="thefattony" id="organization-pk">
		<addPrimaryKey columnNames="id" constraintName="organization_pk" tableName="organization"/>
	</changeSet>

</databaseChangeLog>

