<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="thefattony" id="payment_method_account-table">
        <createTable tableName="payment_method_account">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="iban" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="beneficiary_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="beneficiary_country_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="beneficiary_address" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="bic" type="varchar(19)">
                <constraints nullable="false"/>
            </column>
            <column name="bank_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="bank_country_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bank_address" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="thefattony" id="payment_method_account-pk">
        <addPrimaryKey columnNames="id" constraintName="payment_method_account_pk" tableName="payment_method_account"/>
    </changeSet>

    <changeSet author="thefattony" id="payment_method_account-id-aa" dbms="mysql">
        <addAutoIncrement columnDataType="bigint" columnName="id" tableName="payment_method_account"/>
    </changeSet>

</databaseChangeLog>