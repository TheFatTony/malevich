<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

	<changeSet author="thefattony" id="payment_method_bitcoin-table">
		<createTable tableName="payment_method_bitcoin">
			<column name="id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="address" type="varchar(100)">
				<constraints nullable="false"/>
			</column>
			<column name="wallet" type="blob">
				<constraints nullable="false"/>
			</column>
		</createTable>
		<modifySql dbms="mysql">
			<replace replace="blob" with="longblob"/>
		</modifySql>
	</changeSet>

	<changeSet author="thefattony" id="payment_method_bitcoin-pk">
		<addPrimaryKey columnNames="id" constraintName="payment_method_bitcoin_pk" tableName="payment_method_bitcoin"/>
	</changeSet>

	<changeSet author="thefattony" id="payment_method_bitcoin-id-aa" dbms="mysql">
		<addAutoIncrement columnDataType="bigint" columnName="id" tableName="payment_method_bitcoin"/>
	</changeSet>

</databaseChangeLog>