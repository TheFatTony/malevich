<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

	<changeSet author="thefattony" id="payment_method_deposit_reference-table">
		<createTable tableName="payment_method_deposit_reference">
			<column name="id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="reference" type="varchar(100)">
				<constraints nullable="false"/>
			</column>
		</createTable>
		<modifySql dbms="mysql">
			<replace replace="clob" with="longblob"/>
		</modifySql>
	</changeSet>

	<changeSet author="thefattony" id="payment_method_deposit_reference-pk">
		<addPrimaryKey columnNames="id" constraintName="payment_method_deposit_reference_pk" tableName="payment_method_deposit_reference"/>
	</changeSet>

	<changeSet author="thefattony" id="payment_method_deposit_reference-id-aa" dbms="mysql">
		<addAutoIncrement columnDataType="bigint" columnName="id" tableName="payment_method_deposit_reference"/>
	</changeSet>

</databaseChangeLog>