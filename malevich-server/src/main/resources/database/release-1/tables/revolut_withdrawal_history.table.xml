<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="toolstik" id="revolut_withdrawal_history-table">
        <createTable tableName="revolut_withdrawal_history">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="payments_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="request_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_counterparty_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_account_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="char(3)">
                <constraints nullable="false"/>
            </column>
            <column name="effective_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="toolstik" id="revolut_withdrawal_history-pk">
        <addPrimaryKey columnNames="id" constraintName="revolut_withdrawal_history_pk" tableName="revolut_withdrawal_history"/>
    </changeSet>

    <changeSet author="toolstik" id="revolut_withdrawal_history-id-aa" dbms="mysql">
        <addAutoIncrement columnDataType="bigint" columnName="id" tableName="revolut_withdrawal_history"/>
    </changeSet>

</databaseChangeLog>